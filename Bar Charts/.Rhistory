#Set working directory
setwd("C:/Users/daily/Desktop/Repositories/MiscVisuals/Bar Charts")
#Load necessary libraries
library(tidyverse)
library(ggplot2)
library(weights)
theme_set(theme_bw())
#Import data
gg_data <- read.csv("C:/Users/daily/Desktop/Repositories/MiscVisuals/Bar Charts/Gold_Gloves_3B.csv")
#Creating a highlight for Gehringer
gg_data <- gg_data %>%
mutate(Highlight = ifelse(fullName == "Brooks Robinson", "yes", "no"))
View(gg_data)
gg_data %>%
ggplot(aes(x = reorder(fullName, desc(GoldGloves)), y = GoldGloves, fill = Highlight)) +
geom_bar(stat = "identity", color = "black") +
geom_text(aes(label = GoldGloves), fontface = "bold", vjust = -0.5) +
scale_y_continuous(breaks = seq(5, 16, 1)) +
scale_fill_manual(values = c("yes" = "#DF4601", "no" = "#000000")) +
theme(legend.position = "none") +
theme(axis.text.x = element_text(angle = 45, vjust = 1, hjust = 1)) +
labs(title = "Most Gold Gloves by a 3B",
x = "Player",
y = "Gold Gloves",
fill = "Player")
